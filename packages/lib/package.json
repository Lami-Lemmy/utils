{
  "name": "@xenfo/utils",
  "version": "1.0.0",
  "description": "Utilities for doing various annoying tasks",
  "main": "./src/index.ts",
  "repository": "https://github.com/Xenfo/utils.git",
  "author": "Samuel Corsi-House <chouse.samuel@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "preinstall": "yarn build",
    "shell": "node -i -e \"const Utils = require('./dist').default\"",
    "build": "rm -rf dist/ && tsc --project tsconfig.build.json",
    "watch": "tsc --project tsconfig.build.json --watch",
    "test": "jest",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint --fix --ignore-path ../../.gitignore --ext .js,.ts .",
    "lint:prettier": "prettier --write --ignore-path ../../.gitignore \"*.json\" \"**/*.spec.ts\""
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0"
  }
}
